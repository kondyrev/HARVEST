<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема приложения -->
    <style name="Theme.HARVEST" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Цвет основной палитры -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_light</item>
        <item name="colorOnPrimary">@color/background</item>

        <!-- Цвет вторичный -->
        <item name="colorSecondary">@color/accent_yellow</item>
        <item name="colorSecondaryVariant">@color/accent_yellow</item>
        <item name="colorOnSecondary">@color/background</item>

        <!-- Цвет текста и фона -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:windowBackground">@color/background</item>

        <!-- Убираем тень у BottomNavigationView -->
        <item name="elevationOverlayEnabled" tools:targetApi="lollipop">false</item>
    </style>
</resources>