<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Приветствие -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добро пожаловать!"
            android:textSize="16sp"
            android:textColor="@color/green_primary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Садовод"
            android:textSize="28sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="24dp"/>

        <!-- Кнопка добавления грядки -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddPlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Добавить грядку"
            android:textColor="@color/background"
            android:backgroundTint="@color/green_primary"
            android:layout_marginBottom="24dp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_add"
            app:iconTint="@color/background"
            app:iconGravity="textStart"/>

        <!-- Заголовок списка -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мои грядки"
            android:textSize="20sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp"/>

        <!-- Список грядок -->
        <LinearLayout
            android:id="@+id/containerPlots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="middle">

            <!-- Пример элемента списка -->
            <View
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="@drawable/item_plot_placeholder"
                android:layout_marginBottom="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="@drawable/item_plot_placeholder"
                android:layout_marginBottom="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="@drawable/item_plot_placeholder"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>